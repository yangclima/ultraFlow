{
  "name": "ultraflow",
  "version": "1.0.0",
  "description": "Ultralearning based learning flux",
  "keywords": [
    "Ultralearning",
    "learning",
    "saas"
  ],
  "homepage": "https://github.com/yangclima/ultraFlow#readme",
  "bugs": {
    "url": "https://github.com/yangclima/ultraFlow/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yangclima/ultraFlow.git"
  },
  "license": "MIT",
  "author": "yangclima",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run scripts:wait-for-postgres && npm run migrations:up && next dev",
    "build": "next build",
    "start": "next start",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "lint": "npm run lint:prettier:check && npm run lint:eslint:check",
    "test": "npm run services:up && concurrently -n next,jest --hide next -s command-jest -k \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "services:up": "docker compose -f ./src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f ./src/infra/compose.yaml stop",
    "services:down": "docker compose -f ./src/infra/compose.yaml down",
    "migrations:create": "node-pg-migrate -m ./src/infra/migrations create",
    "migrations:up": "node-pg-migrate -m ./src/infra/migrations --env-path .env.development up",
    "scripts:wait-for-postgres": "node ./src/infra/scripts/wait-for-postgres.js"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "concurrently": "^9.2.1",
    "dotenv": "^17.3.1",
    "eslint-plugin-jest": "^29.15.0",
    "next": "16.1.6",
    "pg": "8.18.0",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@types/jest": "30.0.0",
    "@types/node": "25.2.3",
    "@types/pg": "^8.16.0",
    "@types/react": "19.2.14",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "node-pg-migrate": "8.0.4",
    "prettier": "3.8.1",
    "typescript": "5.9.3"
  }
}
