{
  "name": "ultraflow",
  "version": "1.0.0",
  "description": "Ultralearning based learning flux",
  "keywords": [
    "Ultralearning",
    "learning",
    "saas"
  ],
  "homepage": "https://github.com/yangclima/ultraFlow#readme",
  "bugs": {
    "url": "https://github.com/yangclima/ultraFlow/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yangclima/ultraFlow.git"
  },
  "license": "MIT",
  "author": "yangclima",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait-database && npm run migrations:up && next dev",
    "test": "npm run services:up && concurrently -n next,jest --hide next -s command-jest -k \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:down",
    "test:watch": "jest --watchAll --runInBand",
    "build": "next build",
    "start": "next start",
    "services:up": "docker compose -f ./src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f ./src/infra/compose.yaml stop",
    "services:down": "docker compose -f ./src/infra/compose.yaml down",
    "services:wait-database": "node ./src/infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m ./src/infra/migrations create",
    "migrations:up": "node-pg-migrate -m ./src/infra/migrations --env-path .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "prepare": "husky",
    "commit": "cz"
  },
  "dependencies": {
    "dotenv": "17.3.1",
    "next": "16.1.6",
    "pg": "8.18.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "ts-node": "10.9.2"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.2",
    "@commitlint/config-conventional": "20.4.2",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@types/jest": "30.0.0",
    "@types/node": "25.3.0",
    "@types/pg": "8.16.0",
    "@types/react": "19.2.14",
    "async-retry": "1.3.3",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.15.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "node-pg-migrate": "8.0.4",
    "prettier": "3.8.1",
    "typescript": "5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
