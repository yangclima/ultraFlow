@baseUrl = http://localhost:3000
@apiVersion = v1
@json = application/json

###############################################################################
# API V1 - STATUS
# Endpoint: /api/v1/status
# Descricao: Retorna o status da aplicacao e da dependencia de banco.
# Metodos permitidos: GET
###############################################################################

###
# [STATUS] GET /api/v1/status - 200 OK
# Exemplo de resposta:
# {
#   "updated_at": "2026-03-01T12:00:00.000Z",
#   "dependencies": {
#     "database": {
#       "version": "16.2",
#       "max_connections": 100,
#       "opened_connections": 3
#     }
#   }
# }
GET {{baseUrl}}/api/{{apiVersion}}/status
Accept: {{json}}

###
# [STATUS] Resposta de erro para metodos nao permitidos - 405 MethodNotAllowedError
# Exemplo de resposta:
# {
#   "name": "MethodNotAllowedError",
#   "message": "Metodo HTTP nao permitido para este endpoint",
#   "action": "Verifique se o metodo HTTP enviado e valido para esta rota",
#   "status_code": 405
# }

###
# [STATUS] POST /api/v1/status - 405 Method Not Allowed
POST {{baseUrl}}/api/{{apiVersion}}/status
Accept: {{json}}
Content-Type: {{json}}

###
# [STATUS] PUT /api/v1/status - 405 Method Not Allowed
PUT {{baseUrl}}/api/{{apiVersion}}/status
Accept: {{json}}
Content-Type: {{json}}

###
# [STATUS] PATCH /api/v1/status - 405 Method Not Allowed
PATCH {{baseUrl}}/api/{{apiVersion}}/status
Accept: {{json}}
Content-Type: {{json}}

###
# [STATUS] DELETE /api/v1/status - 405 Method Not Allowed
DELETE {{baseUrl}}/api/{{apiVersion}}/status
Accept: {{json}}

###
# [STATUS] HEAD /api/v1/status - 405 Method Not Allowed
HEAD {{baseUrl}}/api/{{apiVersion}}/status
Accept: {{json}}

###
# [STATUS] OPTIONS /api/v1/status - 405 Method Not Allowed
OPTIONS {{baseUrl}}/api/{{apiVersion}}/status
Accept: {{json}}
